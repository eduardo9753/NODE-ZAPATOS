<section>
    <div class="container">
        <div><h1 class="my-4 text-center">Registro de Usuarios</h1></div>
        <div class="row">
            <div class="col-md-5 mx-auto">
                 <div class="card">
                     <div class="card-body">
                         <form action="/users/signupForm" method="POST">
                             <div>
                                 <div class="form-group">
                                     <label for="">Nonbre</label>
                                     <input type="text" name="username" placeholder="name" class="form-control" autofocus>
                                 </div>
                             </div>
                             <div>
                                 <div class="form-group">
                                     <label for="">Email User</label>
                                     <input type="email" name="email" placeholder="@example.com" class="form-control">
                                 </div>
                             </div>
                             <div>
                                 <div class="form-group">
                                     <label for="">Password</label>
                                     <input type="password" name="password" placeholder="*************" class="form-control">
                                 </div>
                             </div>
                             <div class="my-3">
                                 <div class="form-group">
                                     <input type="submit" name="" value="Registrar" class="btn-input">
                                 </div>
                             </div>
                         </form>
                     </div>
                 </div>
            </div>
        </div>
    </div>
</section>